#include <gl/glew.h>
#include <GLFW/glfw3.h>
#include <iostream>

void inicializarOpenGL()
{
    float vertices[] =
    {
        +0.0f, +0.5f,
        - 0.5f, -0.5f,
        + 0.5f, -0.5f
    };

    unsigned int idBuffer = 0;
    glGenBuffers(1, &idBuffer);
    glBindBuffer(GL_ARRAY_BUFFER, idBuffer);
    glBufferData(GL_ARRAY_BUFFER, sizeof(vertices), vertices, GL_STATIC_DRAW);

    glVertexAttribPointer(0, 2, GL_FLOAT, GL_FALSE, 0, 0);
    glEnableVertexAttribArray(0);

    std::cout << "OpenGL: " << glGetString(GL_VERSION) << std::endl;
    std::cout << "Versão do GLSL: " << glGetString(GL_SHADING_LANGUAGE_VERSION) << std::endl;
}

int main(void)
{
    GLFWwindow* janela;

    /* Inicializa a biblioteca GLFW */
    if (!glfwInit())
        return -1;

    /* Cria uma janela em modo de janela e seu contexto OpenGL */
    janela = glfwCreateWindow(640, 480, "Olá Mundo", NULL, NULL);
    if (!janela)
    {
        glfwTerminate();
        return -1;
    }

    /* Torna o contexto da janela atual */
    glfwMakeContextCurrent(janela);

    GLenum err = glewInit();
    if (GLEW_OK != err)
    {
        /* Problema: falha no glewInit, algo está seriamente errado. */
        fprintf(stderr, "Erro: %s\n", glewGetErrorString(err));
    }

    inicializarOpenGL();

    /* Loop até o usuário fechar a janela */
    while (!glfwWindowShouldClose(janela))
    {
        /* Renderiza aqui */
        glClear(GL_COLOR_BUFFER_BIT);

        glDrawArrays(GL_TRIANGLES, 0, 3);

        /* Troca os buffers frontal e traseiro */
        glfwSwapBuffers(janela);

        /* Aguarda e processa eventos */
        glfwPollEvents();
    }

    glfwTerminate();
    return 0;
}
