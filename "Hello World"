#include <gl/glew.h>
#include <GLFW/glfw3.h>
#include <iostream>

int main(void)
{
    GLFWwindow* janela;

    /* Inicializa a biblioteca GLFW */
    if (!glfwInit())
        return -1;

    /* Cria uma janela em modo de janela e seu contexto OpenGL */
    janela = glfwCreateWindow(640, 480, "Olá Mundo", NULL, NULL);
    if (!janela)
    {
        glfwTerminate();
        return -1;
    }

    /* Torna o contexto da janela atual */
    glfwMakeContextCurrent(janela);

    GLenum err = glewInit();
    if (GLEW_OK != err)
    {
        /* Problema: falha no glewInit, algo está seriamente errado. */
        fprintf(stderr, "Erro: %s\n", glewGetErrorString(err));
    }

    /* Loop até o usuário fechar a janela */
    while (!glfwWindowShouldClose(janela))
    {
        /* Renderiza aqui */
        glClear(GL_COLOR_BUFFER_BIT);

        glBegin(GL_TRIANGLES);
        glVertex2f(+0.0f, +0.5f);
        glVertex2f(-0.5f, -0.5f);
        glVertex2f(+0.5f, -0.5f);
        glEnd();

        /* Troca os buffers frontal e traseiro */
        glfwSwapBuffers(janela);

        /* Aguarda e processa eventos */
        glfwPollEvents();
    }

    glfwTerminate();
    return 0;
}
